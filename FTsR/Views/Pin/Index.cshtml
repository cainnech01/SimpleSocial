@model Pin

<div class="wrap">
    <div class="card border-0 mx-3" style="width: 18rem;">
        <a asp-controller="Pin" asp-action="Index" asp>
            <img id="index_img" class="card-img-top" src="data:image/jpeg;base64,
                        @(Convert.ToBase64String(Model.Image))" alt="Card image cap">
        </a>
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <p class="card-text">
                @if (Model.AuthorProfileImage == null)
                {
                    <img class="rounded-circle" height="25" width="25" src="/images/avatar.png" alt="Card image cap">
                }
                else
                {
                    <img class="rounded-circle" height="25" width="25" src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.AuthorProfileImage))" alt="Card image cap">
                }
                @Model.Author
            </p>
        </div>
    </div>
</div>

