@model Pin
<form method="post" asp-controller="Home" asp-action="Upload" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Title"></label><br />
        <input asp-for="Title" />
        <span asp-validation-for="Title"></span>
    </div>
    <div>
        <label asp-for="Description"></label><br />
        <input asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image" class="control-label">Изображение</label>
        <input type="file" asp-for="Image" class="form-control" />
    </div>
    <div>
        <input type="submit" value="Done" />
    </div>
</form>