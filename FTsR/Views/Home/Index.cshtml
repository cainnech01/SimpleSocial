@model IEnumerable<PinModel>
@{
    ViewData["Title"] = "Home Page";
}
<a asp-controller="Home" asp-action="Upload" type="button" class="btn btn-primary btn-lg">Upload</a>
<div class="d-flex flex-wrap flex-row">
@if (Model != null)
    @foreach(var e in Model)
    {
        <div class="wrap">
            <div class="card mx-3" style="width: 18rem;">
                <img id="cardimg" class="card-img-top" src="data:image/jpeg;base64,@(Convert.ToBase64String(e.Image))" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@e.Title</h5>
                    <p class="card-text">@e.Description</p>
                    <p class="card-test">
                        @if(e.AuthorProfileImage == null)
                        {
                            <img class="rounded-circle" height="25" width="25" src="/images/avatar.png" alt="Card image cap">
                        }
                        else
                        {
                            <img class="rounded-circle" height="25" width="25" src="data:image/jpeg;base64,@(Convert.ToBase64String(e.AuthorProfileImage))" alt="Card image cap">
                        }
                        @e.Author
                    </p>
                </div>
            </div>
        </div>
    }
</div>


<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js\jquery\dist\jquery.js"></script>
<script src="~/js/data.js"></script>